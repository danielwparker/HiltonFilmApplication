@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<HiltonFilmApplication.Models.MovieListing>

<div>
    <h3>Movie List</h3>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th><th></th></tr>
        </thead>

        <tbody>
            @foreach (HiltonFilmApplication.Models.MovieListing x in Model)
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td>
                        <form>
                            <input type="hidden" value="@x.MovieKey" name="id" />
                            <button type="submit" asp-controller="MovieListings" class="btn" asp-action="Edit">Edit</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>